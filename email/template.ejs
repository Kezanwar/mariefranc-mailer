<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap"
      rel="stylesheet"
    />
    <title>Marie Franc</title>

    <style type="text/css">
      /* desktop styles */
      html {
        font-family: "Manrope", sans-serif;
        color: #000;
      }

      h2 {
        font-size: 2rem;
      }

      h3 {
        text-transform: uppercase;
        font-weight: 400;
        letter-spacing: 3px;
        font-size: 1rem;
      }

      h2,
      h3,
      h4,
      h5,
      h6 p {
        line-height: 1.35;
      }

      p,
      li {
        line-height: 1.6;
        color: #070707;
        font-size: 1rem;
      }

      h1,
      h2,
      h4,
      h5,
      h6,
      p {
        margin: 0;
        margin-block-start: 0;
        margin-block-end: 0;
        margin-bottom: 24px;
        letter-spacing: -0.2px;
      }

      h1 {
        line-height: 1;
        letter-spacing: -2px;
        font-size: 3rem;
      }

      table {
        border-spacing: 0;
      }

      table tr td {
        padding: 32px;
      }

      #footer-td {
        background-position: 40px 0px;
      }

      /* tablet styles */
      @media only screen and (max-width: 860px) {
        #desktop-smile-icon {
          display: none;
        }

        #mobile-smile-icon {
          display: initial;
          padding-bottom: 32px;
          width: 70px;
        }
      }

      /* mobile styles */
      @media only screen and (max-width: 480px) {
        table tr td {
          padding: 16px;
        }

        #button-table-wrapper td {
          padding: 0px;
        }

        #footer-td {
          background-position: 0px 0px;
        }
      }
    </style>
  </head>

  <body style="padding: 0; margin: 0">
    <table
      border="0"
      cellpadding="0"
      cellspacing="0"
      height="100%"
      width="100%"
      style="background-color: #ffffff; padding: 0px"
    >
      <tr>
        <td style="padding: 0" align="center" valign="top">
          <table
            border="0"
            role="main"
            style="
              max-width: 640px;
              min-height: 100vh;
              background-color: #ffffff;
            "
          >
            <tr>
              <td style="padding: 0">
                <!-- Body start -->
                <table
                  role="presentation"
                  border="0"
                  cellspacing="0"
                  width="100%"
                >
                  <tr>
                    <td valign="top">
                      <h2>Hi <%= locals?.receiver %>,</h2>
                      <h3><%= locals?.title %></h3>
                      <% if(locals?.content) { %> <% for (paragraph of content)
                      { %>
                      <p style="margin-bottom: 8px"><%- paragraph %></p>
                      <% } %> <% } %>
                      <p style="margin-bottom: 0; margin-top: 20px">
                        Many thanks,
                      </p>
                      <p>MARIE FRANC</p>

                      <img
                        src="https://ci3.googleusercontent.com/mail-sig/AIorK4yltKSQFoH4ps2-tPyJriAPCeFyxsGdqT4PZidLpLgfHtfSmbsC71cGgj5F0sSqwWKbFVBfTGkiW7N0"
                        style="height: 400px"
                        data-bit="iit"
                        tabindex="0"
                      />
                    </td>
                  </tr>
                </table>
                <!-- Body end -->
                <!-- Footer start -->
                <table
                  role="presentation"
                  border="0"
                  cellspacing="0"
                  width="100%"
                >
                  <tr>
                    <td
                      id="footer-td"
                      height="220px"
                      align="right"
                      valign="bottom"
                    ></td>
                  </tr>
                </table>
                <!-- Footer end -->
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
